{
    "name": "@learning-path-builder/backend",
    "version": "1.0.0",
    "description": "Backend API pour Learning Path Builder",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc && npm run copy:assets",
        "start": "node dist/index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "clean": "rimraf dist",
        "copy:assets": "cp -r src/assets dist/ 2>/dev/null || true",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "morgan": "^1.10.0",
        "dotenv": "^16.3.1",
        "compression": "^1.7.4",
        "express-rate-limit": "^7.1.5",
        "joi": "^17.11.0",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.0.3",
        "winston": "^3.11.0",
        "express-async-errors": "^3.1.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/morgan": "^1.9.9",
        "@types/compression": "^1.7.5",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.10.0",
        "@types/jest": "^29.5.8",
        "@types/supertest": "^2.0.16",
        "typescript": "^5.3.0",
        "tsx": "^4.6.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "supertest": "^6.3.3",
        "eslint": "^8.54.0",
        "@typescript-eslint/eslint-plugin": "^6.12.0",
        "@typescript-eslint/parser": "^6.12.0",
        "rimraf": "^5.0.5",
        "nodemon": "^3.0.2"
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "keywords": [
        "api",
        "backend",
        "express",
        "typescript",
        "nodejs"
    ],
    "author": "Your Name",
    "license": "MIT"
}
