# Assessment Cooldown Configuration (in hours)
# Streak Recovery: Cooldown between recovery assessment attempts
STREAK_RECOVERY_COOLDOWN_HOURS=1
# Resource Assessment: Cooldown between resource assessment attempts (for future feature)
RESOURCE_ASSESSMENT_COOLDOWN_HOURS=1

# Number Parsing Configuration
# Base for parsing integer values from environment variables (2-36, default: 10)
PARSE_INT_BASE=10

# Streak Recovery Configuration
# Maximum number of days that can be recovered (default: 7)
STREAK_RECOVERY_MAX_DAYS=7
# Number of questions per recoverable day (default: 10)
STREAK_RECOVERY_QUESTIONS_PER_DAY=10
# Maximum total questions for recovery assessment (default: 30)
STREAK_RECOVERY_MAX_QUESTIONS=30

# Assessment Configuration
# Default number of questions for objective assessments (default: 25)
ASSESSMENT_QUESTION_COUNT=25

# Module Final Exam Configuration
# Number of questions for module final exam (default: 10)
MODULE_FINAL_EXAM_QUESTION_COUNT=10
# Minimum score percentage to pass module final exam (default: 80)
MODULE_FINAL_EXAM_MIN_SCORE=80
# Minimum score percentage to pass resource assessment (default: 80)
RESOURCE_ASSESSMENT_MIN_SCORE=80
